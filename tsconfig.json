{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
     "dom",
     "es2015"
    ]
  },
  "transformers": {
      before: [context => node => node],
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}